{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CSH (debug)",
            "type": "shell",
            "command": "meson setup builddir --buildtype=debug && meson compile -C builddir",
            "options": {
                "cwd": "/workspace"
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean CSH build",
            "type": "shell",
            "command": "rm -rf builddir",
            "options": {
                "cwd": "/workspace"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}
